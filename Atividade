Algoritimo 1º sequencial

package main

import "fmt"

func main() {
	var x int
	var y int
	var p int
	fmt.Print("Digite o 1º número")
	fmt.Scan(x)
	fmt.Print("Digite o 2º número")
	fmt.Scan(y)
	fmt.Print("Digite o 3º número")
	fmt.Scan(p)
	fmt.Println("A soma dos números que você digitou é", x+y+p)
}

Algoritimo 2º sequencial:

package main

import "fmt"

func main() {
	var x int
	fmt.Print("Digite um número")
	fmt.Scan(&x)
	fmt.Println("o dobro do número escolhido é", x*2)
	fmt.Println("o triplo do número escolhido é", x*3)
	fmt.Println("o quadruplo do número escolhido é", x*4)

}

Algoritimo 3º sequencial:
package main

import "fmt"

func main() {
	var x float64
	var y float64
	fmt.Print("Digite sua altura ")
	fmt.Scan(&x)
	fmt.Print("Digite seu peso ")
	fmt.Scan(&y)
	fmt.Println("O seu iMC é", y/(x*x))
}

Algoritimo 4º sequencial:

package main

import "fmt"

func main() {
	var x float64
	var y float64
	var o float64
	fmt.Print("Digite o 1º número real:")
	fmt.Scan(&x)
	fmt.Print("Digite o 2º número real:")
	fmt.Scan(&y)
	fmt.Print("Digite o 3º número real:")
	fmt.Scan(&o)
	fmt.Println("a média ponderada é ", (x*2)+(y*3)+(o*5)/(10))
}

Algoritimo 1º seleção:

package main

import "fmt"

func main() {
	var x int
	var y int
	fmt.Print("Digite o 1º número")
	fmt.Scan(&x)
	fmt.Print("Digite o 2º número")
	fmt.Scan(&y)
	if x < y {
		fmt.Println("O maior número é", y)
	} else {
		fmt.Println("O maior número é", x)
	}
}

Algoritimo 2º seleção:

package main

import "fmt"

func main() {
	var x int
	var y int
	var z int
	fmt.Print("Digite o 1º número")
	fmt.Scan(&x)
	fmt.Print("Digite o 2º número")
	fmt.Scan(&y)
	fmt.Print("Digite o 3º número")
	fmt.Scan(&z)
	if x < y && x < z {
		fmt.Println("O menor número é", x)
	} else if y < x && z > y {
		fmt.Println("O menor número é", y)
	} else {
		fmt.Println("O menor número é", z)
	}
}

algoritimo 3º seleção:

package main

import "fmt"

func main() {
	var i int
	fmt.Print("Digite um número!")
	fmt.Scan(&i)
	if i%2 == 0 {
		fmt.Println("Número ", i, " é par")
	} else {
		fmt.Println("Número ", i, " é impar")
	}

}

Algoritimo 1º repetição:

package main

import "fmt"

func main() {
	var i int64
	for i = 0; i <= 10; i++ {
		fmt.Println("O número é", i)
	}
}

Algoritimo 2º repetição:

package main

import "fmt"

func main() {
	var i int64
	for i = 0; i <= 20; i++ {
		if i%2 == 0 {
			fmt.Println("Os números pares até 20:", i)
		}
	}
}

Algoritimo 3º repetição:

package main

import "fmt"

func main() {
	var i int64
	for i = 1; i <= 19; i++ {
		if i%2 == 1 {
			fmt.Println("Os números impares até 20:", i)
		}
	}
}

